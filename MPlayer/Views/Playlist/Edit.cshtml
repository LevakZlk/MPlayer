@model MPlayer.Models.PlaylistChangeModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           Playlist name
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                Musics
                @Html.ListBoxFor(model => model.MusicsId, MPlayer.Models.PlaylistChangeModel.GetMusicSelectItems, new { multiple = "multiple", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "PlaylistView")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
